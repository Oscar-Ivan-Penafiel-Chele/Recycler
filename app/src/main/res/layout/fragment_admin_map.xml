        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ic_head">

            <Button
                android:id="@+id/backHomeAdmin"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_arrow_left"
                android:textColor="@color/black"></Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingTop="18dp"
                android:text="Puntos de Referencia"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/addReferenceMap"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ic_btn_add"
                    ></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                <EditText
                    android:id="@+id/searchReference"
                    android:layout_width="215dp"
                    android:layout_height="40dp"
                    android:hint="Buscar..."
                    android:paddingLeft="15dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/ic_rectangle_13"></EditText>
                <Button
                    android:id="@+id/searchIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/ic_search"></Button>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reciclerView">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>


