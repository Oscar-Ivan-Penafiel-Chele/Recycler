        <LinearLayout
            android:id="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="300dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="135dp"
                android:layout_height="140dp"
