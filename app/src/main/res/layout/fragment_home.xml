<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lystack"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/ic_header">
                <TextView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/icon_app"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/txt_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="Sin conexiÃ³n a internet !"
                    android:textColor="?android:attr/textColorPrimaryNoDisable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_map"
                    android:layout_width="135dp"
                    android:layout_height="140dp"
                    android:background="@drawable/ic_bx_map"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    ></Button>
                <Button
                    android:id="@+id/btn_recycler"
                    android:layout_width="135dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_bx_reciclar"
                    ></Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="135dp"
                    android:layout_height="140dp"
                    android:background="@drawable/ic_bx_registro"></Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>