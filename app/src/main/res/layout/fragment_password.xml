<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PasswordFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/ic_head"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_back_profile"
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:background="@drawable/ic_x"></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:paddingTop="18dp"
                    android:text="Contrase単a"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:endIconMode="password_toggle"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/oldPassword"
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_input_pass"
                                android:hint="Contrase単a Actual"
                                android:inputType="textPassword"
                                android:paddingLeft="20dp"></EditText>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:endIconMode="password_toggle">

                            <EditText
                                android:id="@+id/newPassword"
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_input_pass"
                                android:hint="Contrase単a Nueva"
                                android:inputType="textPassword"
                                android:paddingLeft="20dp"></EditText>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            app:endIconMode="password_toggle">

                            <EditText
                                android:id="@+id/confirmNewPassword"
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_input_pass"
                                android:hint="Confirmar Contrase単a"
                                android:inputType="textPassword"
                                android:paddingLeft="20dp"></EditText>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_conf_pass"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Confirmar"
                            android:background="@drawable/blue_fill__rounded_color"
                            ></Button>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>