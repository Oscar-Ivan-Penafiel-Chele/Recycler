<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProductsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ic_head">

            <Button
                android:id="@+id/btn_back_products"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_arrow_left"
                android:textColor="@color/black"></Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingTop="18dp"
                android:text="Productos"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_add"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_btn_add"
                ></Button>
            <EditText
                android:id="@+id/edit_search"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Buscar..."
                android:paddingLeft="15dp"
                android:background="@drawable/ic_rectangle_13"></EditText>
            <Button
                android:id="@+id/btn_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_search"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="140dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp">
                <TableRow
                    android:id="@+id/header_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/border"
                        android:text="Descripción"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_weight="0.5"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Acciones"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:background="@drawable/border"
                        android:layout_weight="0.2"
                        android:gravity="center_horizontal"></TextView>
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Hojas de cuaderno"
                        android:textSize="14dp"
                        android:background="@drawable/border_body"
                        android:layout_weight="0.5"></TextView>
                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/border_body"
                        android:weightSum="1">
                        <Button
                            android:id="@+id/btn_edit"
                            android:layout_width="30dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/ic_btn_edit"></Button>
                        <Button
                            android:id="@+id/btn_delete"
                            android:layout_width="31dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/ic_btn_delete"></Button>
                    </LinearLayout>
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Botellas plásticas"
                        android:textSize="14dp"
                        android:background="@drawable/border_body"
                        android:layout_weight="0.5"></TextView>
                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/border_body"
                        android:weightSum="1">
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/ic_btn_edit"></Button>
                        <Button
                            android:layout_width="31dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/ic_btn_delete"></Button>
                    </LinearLayout>
                </TableRow>
                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Botellas de vidrio"
                        android:textSize="14dp"
                        android:background="@drawable/border_body"
                        android:layout_weight="0.5"></TextView>
                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/border_body"
                        android:weightSum="1">
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/ic_btn_edit"></Button>
                        <Button
                            android:layout_width="31dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/ic_btn_delete"></Button>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="400dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_save_product"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_btn_pass"
                android:text="confirmar"></Button>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>